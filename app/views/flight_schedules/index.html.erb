<p id="notice"><%= notice %></p>

<h1>Listing Flight Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Departure</th>
      <th>Arrival</th>
      <th>Monday</th>
      <th>Tuesday</th>
      <th>Wednesday</th>
      <th>Thursday</th>
      <th>Friday</th>
      <th>Saturday</th>
      <th>Sunday</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flight_schedules.each do |flight_schedule| %>
      <tr>
        <td><%= flight_schedule.departure %></td>
        <td><%= flight_schedule.arrival %></td>
        <td><%= flight_schedule.monday %></td>
        <td><%= flight_schedule.tuesday %></td>
        <td><%= flight_schedule.wednesday %></td>
        <td><%= flight_schedule.thursday %></td>
        <td><%= flight_schedule.friday %></td>
        <td><%= flight_schedule.saturday %></td>
        <td><%= flight_schedule.sunday %></td>
        <td><%= flight_schedule.start_date %></td>
        <td><%= flight_schedule.end_date %></td>
        <td><%= link_to 'Show', flight_schedule %></td>
        <td><%= link_to 'Edit', edit_flight_schedule_path(flight_schedule) %></td>
        <td><%= link_to 'Destroy', flight_schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

