<p id="notice"><%= notice %></p>

<h1>Listing Adhoc Cancellations</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adhoc_cancellations.each do |adhoc_cancellation| %>
      <tr>
        <td><%= adhoc_cancellation.date %></td>
        <td><%= link_to 'Show', adhoc_cancellation %></td>
        <td><%= link_to 'Edit', edit_adhoc_cancellation_path(adhoc_cancellation) %></td>
        <td><%= link_to 'Destroy', adhoc_cancellation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

