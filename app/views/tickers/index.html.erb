<p id="notice"><%= notice %></p>

<h1>Listing Tickers</h1>
<%= form_tag edit_individual_airport_tickers_path do %>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Airport</th>
      <th>Ticker item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickers.each_with_index do |ticker, index| %>
      <tr>
        <td><%= check_box_tag "ticker_ids[]", ticker.id %></td>
        <td><%= ticker.airport_id %></td>
        <td><%= ticker.ticker_item %></td>
        <td><%= link_to 'Edit', edit_airport_ticker_path(id: ticker.id) %></td>
        <td><%= link_to 'Destroy', airport_ticker_path(id: ticker.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p><%= submit_tag "Edit Checked" %></p>
<% end %>
<button><%= link_to 'back', airport_path(id: @airport.code) %></button>
<%= link_to 'New Ticker', new_airport_ticker_path %>
